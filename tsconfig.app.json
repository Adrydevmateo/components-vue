{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@assets/*": [
        "./src/core/assets/*"
      ],
      "@components/*": [
        "./src/core/components/*"
      ],
      "@views/*": [
        "./src/core/views/*"
      ],
      "@stores/*": [
        "./src/core/stores/*"
      ]
    }
  }
}